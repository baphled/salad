<% content_for :side_bar do %>
	<%= error_messages_for :project %>
<% end %>

<% form_for project,:builder => ValidatingFormBuilder do |f| -%>
		<%= f.text_field :title %>
		<%= f.text_area :description, :rows => 4 %>
		<%= f.text_area :aim, :rows => 4 %>

		<% if !Feature.all.empty? %>
		<fieldset>
			<legend>Features</legend>
			<ul id="left_list">
		  <% for feature in Feature.find :all %>
		    <li>
				<%= check_box_tag "project[feature_ids][]", feature.id, @project.features.include?(feature) %>
					<%= feature.title%>
				</li>
		<% end %>
			</ul>
		</fieldset>
		<% else %>
		  <b>No features to add</b>
		<% end %>
		
	<%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end -%>