<% content_for :css_head do %>
	<%= stylesheet_link_tag 'features' %>
<% end %>
<fieldset class="project_field">
	<legend>Project Summary</legend>
	<div class='project_info'>
		<b>Title: </b><span><%= @project.title %></span><br/>
		<b>Description: </b><span><%= @project.description %></span><br/>
		<b>Aim: </b><span><%= @project.aim %></span><br/>
	</div>
</fieldset>
<%= link_to "Add feature", new_feature_path({:project_id=>@project.id})%>
<b>Features</b><span class="order_icon">Order</span>
<ul>
	<% if !@project.features.blank? %>
	  <% for feature in @project.features %>
	    <li>
				<span class="order_box">1</span>
				<%= feature.title %>
				<span class="icons"></span>
			</li>
	  <% end %>
	<% end %>
</ul>