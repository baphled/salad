<% content_for :css_head do %>
	<%= stylesheet_link_tag 'features' %>
<% end %>

<div id="info">
	<h4>Project Info</h4>	
	<%= render :partial => '/common/project_info', :locals => {:project => @project}%>
	<%= render :partial => '/common/project_summary', :locals => {:project => @project}%>
</div>

<% if !@project.features.blank? %>
	<%= render :partial => '/common/list/features', :locals => {:features => @project_features, :order =>true}%>
<% end %>

<%= render :partial => '/common/hover', :locals => {:items => @project.features}%>
<%= render :partial => 'common/sidebar/feature_stories', :locals => {:features => @project.features}%>