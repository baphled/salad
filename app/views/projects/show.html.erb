<h4>Project Info</h4>
<div id="info">
  <%= render :partial => '/common/model_information', :locals => {:model => @project}%>
  <%= render :partial => '/common/model_summary', :locals => {:model => @project, :assoc => :features}%>
</div>

<% if not @project.location.nil? %>
	<%= link_to "Import", project_import_path(@project) %> |
<% end %>

<%= link_to "Edit project", edit_project_path(@project) %> |

<%= render :partial => '/common/sortable_list',:locals => {:models => @project.features.all(:order=>"feature_projects.position"), :item_name => 'feature', :assoc => 'step', :order =>true}%>
<%= render :partial => 'common/sidebar_items', :locals => {:models => @project.features.all(:order=>"feature_projects.position"), :assoc => 'stories'}%>
<%= render :partial => '/common/hover', :locals => {:items => 'feature'}%>
