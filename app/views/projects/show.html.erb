<h4>Project Info</h4>
<div id="info">
  <%= render :partial => '/common/model_information', :locals => {:model => @project}%>
  <%= render :partial => '/common/model_summary', :locals => {:model => @project, :assoc => :features}%>
</div>

<% if not @project.location.blank? %>
	<%= link_to "Import", import_project_path(@project) %> |
<% end %>

<%= link_to "Edit project", edit_project_path(@project) %> |

<div id="list">
  <%= render :partial => '/common/sortable_list',:locals => {:models => @project_features, :item_name => 'feature', :assoc => 'story', :order =>true}%>
</div>
<%= render :partial => 'common/sidebar_items', :locals => {:models => @project_features, :assoc => 'stories'}%>
<%= render :partial => '/common/hover', :locals => {:items => 'feature'}%>
