<% content_for :side_bar do %>
	<%= render :partial => '/steps/step_search', :locals => {:story => story}%>
	<br />
	<%= error_messages_for :story %>
<% end %>

<%= render :partial => "/common/hover_dialog" %>

<% content_for :js_head do %>
  <%= javascript_include_tag "/javascripts/validations/story" %>
  <%= javascript_include_tag "add_step" %>
<% end %>

<%- semantic_form_for @story do |form| -%>
    <fieldset>
		<% form.inputs :name => form_title(@story, "Story") do %>
			<%= form.input :scenario %>
			<%= form.input :tag_list %>
		<% end %>
		<%= render :partial => '/common/checkboxes', :locals => {:model => story, :item_name => Feature}%>
		<%= render :partial => '/common/checkboxes', :locals => {:model => story, :item_name => Step}%>
	
		<%= render :partial => "/common/save_button" %>
	</fieldset>
<% end %>

<% if not @story.id.nil? %>
	<% @path = add_stories_step_path(@story)%>
<% else %>
	<% @path = add_step_stories_path %>
<% end %>

