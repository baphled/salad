<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-us" lang="en-us">
<head>
  <title>SaladBowl</title>
</head>
<%= stylesheet_link_tag "application" %>
<%= yield :css_head %>
<body>
  <div id="notice" class="notice"><%= flash[:notice] %></div>
  <div id="error" class="error"><%= flash[:error] %></div>
	<div id="content">
		<div id="head">
			<span id="logo">Salad</span><br/>
			<span id="slogan">Mixing things up</span>
		</div>
		<div id="menu">
			<div id="menu-items">
				<%= link_to "Projects", projects_path %> | <%= link_to "Features", features_path %> | <%= link_to "Stories", stories_path %>
			</div>
		</div>
		<div id="container">
			<div id="main">
		  	<%= yield :layout %>
			</div>
			<div id="right_column">
				Content
			</div>
		</div>
		<div id="foot">&copy; Designed &amp; Developed by <a href="http://boodah.net">boodah.net</a></div>
	</div>
</body>
</html>