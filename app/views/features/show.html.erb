<div id="feature_info">
	<%= render :partial => '/common/feature_info', :locals => {:feature => @feature} %>
</div>
<div style="clear:both"></div>
<% if !@feature.stories.blank? %>
	<%= link_to "export feature", feature_export_path(@feature) %>
<% end %>
<%= render :partial => '/common/list/stories', :locals => {:stories => @feature.stories.paginate(:page=>params[:page],:per_page=>10,:order=>"feature_stories.position"), :order =>true}%>
<%= render :partial => '/common/stories_hover', :locals => {:stories => @feature.stories}%>
<%= render :partial => 'common/sidebar/story_steps', :locals => {:stories => @feature.stories}%>