<div id="feature_info">
	<%=h @feature.title %><br/>
	<%=h @feature.body %><br/>
</div>
	<%= link_to "New Story", new_story_path({:feature_id=>@feature.id}) %>
	<ul>
  <% for story in @feature.stories %>
		<li>
			<div>
	    	<%=h story.title %>
				<%=h story.scenario %>
			</div>
		</li>
  <% end %>
	</ul>
