<h4>Feature Info</h4>
<div id="info">
	<%= render :partial => '/common/model_information', :locals => {:model => @feature}%>
    <%= render :partial => '/common/model_summary', :locals => {:model => @feature, :assoc => :stories}%>
</div>
<div style="clear:both"></div>

<% if !@feature.stories.blank? %>
	<%= link_to "export feature", export_feature_path(@feature) %>
<% end %>

<div id="list">
  <%= render :partial => '/common/sortable_list',:locals => {:models => @feature_stories, :item_name => 'story', :assoc => 'step', :order =>true} %>
</div>

<%= render :partial => '/common/hover', :locals => {:items => 'story'}%>
<%= render :partial => 'common/sidebar_items', :locals => {:models => @feature_stories, :assoc => 'steps'}%>