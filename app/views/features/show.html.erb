<div id="feature_info">
	<%= render :partial => '/common/feature_info', :locals => {:feature => @feature} %>
</div>
<div style="clear:both"></div>
<% if !@feature.stories.blank? %>
	<%= link_to "export feature", feature_export_path(@feature) %>
<% end %>
<%= render :partial => '/common/sortable_list',:locals => {:models => @feature.stories.paginate(:page=>params[:page],:per_page=>10,:order=>"feature_stories.position"), :item_name => 'story', :order =>true}%>
<%= render :partial => '/common/hover', :locals => {:items => 'story'}%>
<%= render :partial => 'common/sidebar/story_steps', :locals => {:stories => @feature.stories.paginate(:page=>params[:page],:per_page=>10,:order=>"feature_stories.position")}%>