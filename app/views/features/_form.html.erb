<% content_for :side_bar do %>
	<%= error_messages_for :feature %>
<% end %>

<% form_for @feature,:builder => ValidatingFormBuilder do |f| %>
		<%= f.text_field :title %>
		<%= f.text_area :body %>
		<% if !Project.all.empty? %>
	  	<% for project in Project.find :all %>
		    <div>
				<%= check_box_tag "feature[project_ids][]", project.id, @feature.projects.include?(project), {:id=>"project_id_#{project.id}"} %>
					<%= project.title%>
				</div>
			<% end %>
		<% end %>
	</p>
	
	<%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end -%>