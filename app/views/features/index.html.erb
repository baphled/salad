<h3>Features</h3>
<%= link_to "New Feature", new_feature_path %>
<%= render :partial => '/common/features_list', :locals => {:features => @features}%>
<%= render :partial => 'common/sidebar/feature_stories', :locals => {:features => @features}%>

<% content_for :js_head do %>
 <% for feature in @features %>
   <% if !feature.stories.blank? %>
	<script type="text/javascript">
		document.observe('dom:loaded', function() {
       $('feature_<%=feature.id %>_list').observe('click', displayInfo.bindAsEventListener(this, 'feature_<%=feature.id %>_story'));
   <% end %>
 <% end %>
			$('li.feature_stories').hide();
		});
	</script>
<% end %>

