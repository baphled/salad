<%= render :partial => "/common/hover_dialog" %>

<% content_for :js_head do %>
  <%= javascript_include_tag "jquery-validate" %>
  <%= javascript_include_tag "jquery.formtastic.tooltips" %>
  <%= javascript_include_tag "form" %>
  <%= javascript_include_tag "jquery.hover.dialog" %>
  <%= javascript_include_tag "item_hover" %>
  <%= javascript_include_tag "/javascripts/validations/step" %>
<% end %>

<%- semantic_form_for @step do |form| -%>
  <% form.inputs :name => form_title(@step, "Step") do %>
    <%= error_messages_for :step %>
    <%= form.input :title, :hint => 'e.g. Given I have all my marbles' %>
    <%= form.input :tag_list %>
    <%= render :partial => "/common/save_button" %>

  <% end %>
  <%= render :partial => '/common/checkboxes', :locals => {:model => step, :item_name => Story}%>
<% end %>
