<% content_for :side_bar do %>
	<%= error_messages_for :step %>
<% end %>

<% form_for step,:builder => ValidatingFormBuilder do |f| -%>
  <%= f.text_field :title %>
	<%= render :partial => '/common/stories_checkboxes', :locals => {:step => step} %>
	<%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end -%>