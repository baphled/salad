<% content_for :js_head do %>
	<%= javascript_include_tag "pagination" %>
<% end %>


<% form_tag steps_path, :method=>'get' do -%>
  <%= text_field_tag :search %>
	<%= submit_tag "Submit", :disable_with => 'Submitting...', :name=>nil %>
<% end -%>
<% if not :search.nil? %>
<span>Results (<%= @steps.size.to_s %>)<span>
<% end %>
<h3>Steps</h3>
<div id="steps_list">
<%= render :partial => '/common/list/steps', :locals => {:steps => @steps, :order =>false}%>
</div>
