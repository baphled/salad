<span class="icons">
	<%= link_to "View", story_path(story) %>
	<%= link_to "Edit", edit_story_path(story), {:id=>"edit_story_#{story.id}"} %>
	<% if !story.step_ids.empty? %>
		<%= link_to "Steps", story_steps_path(story), {:id=>"story_#{story.id}_steps"}%>
	<% end %>
	<%= link_to "New Step", new_step_path({:story_id=>story.id}) %>
	<%= link_to 'Delete', story, :confirm => 'Are you sure?', :method => :delete %>
</span>