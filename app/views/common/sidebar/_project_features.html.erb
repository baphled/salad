<% content_for :side_bar do %>
	<ul id="project_features">
	<% if !projects.blank? %>
	  <% projects.each_with_index do |project, index| %>
			<li id="project_<%=project.id%>_feature" class="project_item_<%= index %>" style="display: none;">
				<h3><%=h project.title %></h3>
			<% if !project.features.blank? %>				
			  <% for feature in project.features %>
				<div>
					<%=h truncate(feature.title,:length=>70) %>
				</div>
			  <% end %>
			<%else%>
				Project does not have any features yet.
			</li>
			<% end %>
	  <% end %>
	</ul>
	<% else %>
	  <p>No projects</p>
	<% end %>
<% end %>

