<% content_for :js_head do %>
<script type="text/javascript">
	document.observe('dom:loaded', function() {
 <% for story in stories %>
      $('story_<%=story.id %>').observe('mouseover', displayInfo.bindAsEventListener(this, 'story_<%=story.id %>_step'));
		$('story_<%=story.id %>').observe('mouseout', displayInfo.bindAsEventListener(this, 'story_<%=story.id %>_step'));
<% end %>
		$('li.story_steps').hide();
	});
	</script>
<% end %>