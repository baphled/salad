<% if !stories.blank? %>
  <% stories.each_with_index do |story,index| %>
		<li class="story_item_<%= index %>" style="display: none;">
			<h3><%=h story.scenario %></h3>
		<% if !story.steps.blank? %>
		<ul>
		  <% for step in story.steps %>
			    <li><%=h format_step(step) %></li>
		  <% end %>
		</ul>
		<%else%>
			Story does not have any steps yet.
		<% end %>
		</li>
  <% end %>
<% else %>
  <li>No stories</li>
<% end %>